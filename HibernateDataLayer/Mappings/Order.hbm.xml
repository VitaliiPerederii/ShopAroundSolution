<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
          assembly="HibernateDataLayer"
          namespace="HibernateDataLayer">

  <class name="Order" lazy="true">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Date" />
    <property name="ShipAddress" />
    <property name="Proceed" />
    <property name="CustomerName" />
    <property name="CustomerEmail" />
    <bag name="OrderShopItem" lazy="true" inverse="true" batch-size="25" cascade="all-delete-orphan">
      <key column="Id" />
      <one-to-many class="OrderShopItem" />
    </bag>
  </class>
</hibernate-mapping>