@model IQueryable<ShopAround.Models.UiShopItem>
<div id="main">
    <div class="sidepanel">
        <div class="container searchpanel">

        </div>
        <div class="container categories">
        </div>
    </div>
    <div class="content">
        <ul>
            @foreach (ShopAround.Models.UiShopItem item in Model)
            {
                <li>
                    @item.Name &nbsp @item.Category.Name &nbsp @item.Price 
                    @Html.ActionLink("Details", "ShowItem", new { id = @item.Id})
                    <span>&nbsp;</span>
                    @if (Request.IsAuthenticated)
                    {
                        if (HttpContext.Current.User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Edit", "EditShopItem", new { id = @item.Id})
                            <span>&nbsp;</span>       
                            @Html.ActionLink("Delete", "DeleteShopItem", new { id = @item.Id})
                        }
                    }
                    @using(Html.BeginForm("AddItemToCart", "Cart", new { id = item.Id }, FormMethod.Post))
                    {
                        <input type="submit" value="Add to cart" />
                    }
                        
                </li>
            }
        </ul>
    </div>

</div>




